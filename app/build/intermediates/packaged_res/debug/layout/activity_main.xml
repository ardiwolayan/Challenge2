<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vgBar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="wrap_content"
                android:layout_height="160dp"

                android:src="@drawable/img_banner1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:iconifiedByDefault="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryHint="Cari disini" />

            <ImageView
                android:id="@+id/ivIconCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:src="@android:drawable/ic_menu_camera"
                app:layout_constraintRight_toRightOf="@+id/searchView"
                app:layout_constraintTop_toTopOf="@+id/searchView" />

            <ImageView
                android:id="@+id/ivIconCart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_shopping_cart"
                app:layout_constraintBottom_toBottomOf="@+id/searchView"
                app:layout_constraintLeft_toRightOf="@+id/searchView"
                app:layout_constraintTop_toTopOf="@+id/searchView" />

            <ImageView
                android:id="@+id/ivChat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_bubble_chat"
                app:layout_constraintBottom_toBottomOf="@+id/searchView"
                app:layout_constraintLeft_toLeftOf="@+id/ivIconCart"
                app:layout_constraintTop_toTopOf="@+id/searchView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPoint"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="20dp"
            android:outlineAmbientShadowColor="@color/black"
            android:shadowDx="30"
            android:shadowDy="30"
            android:shadowRadius="50"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vgBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vgPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivScanner"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_scan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vLine1"
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@id/vgPoint"
                    app:layout_constraintLeft_toRightOf="@+id/ivScanner"
                    app:layout_constraintTop_toTopOf="@+id/vgPoint" />

                <ImageView
                    android:id="@+id/ivDompet"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_wallet"
                    app:layout_constraintLeft_toLeftOf="@+id/vLine1"
                    app:layout_constraintTop_toTopOf="@id/vLine1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Rp16.000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/ivDompet"
                    app:layout_constraintTop_toTopOf="@id/ivDompet" />

                <TextView
                    android:id="@+id/tvShopeePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Isi Saldo ShopeePay"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/vLine1"
                    app:layout_constraintLeft_toLeftOf="@id/ivDompet"
                    app:layout_constraintTop_toBottomOf="@id/ivDompet" />

                <View
                    android:id="@+id/vLine2"
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@id/vgPoint"
                    app:layout_constraintLeft_toRightOf="@+id/tvShopeePay"
                    app:layout_constraintTop_toTopOf="@+id/vgPoint" />

                <ImageView
                    android:id="@+id/ivCoin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_coin"
                    app:layout_constraintLeft_toRightOf="@id/vLine2"
                    app:layout_constraintTop_toTopOf="@id/vLine2"/>
                <TextView
                    android:id="@+id/tv5Coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="5 Koin"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/ivCoin"
                    app:layout_constraintTop_toTopOf="@id/ivCoin" />

                <TextView
                    android:id="@+id/tvKlaimKoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Klaim Koin Disini"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/vLine1"
                    app:layout_constraintLeft_toLeftOf="@id/ivCoin"
                    app:layout_constraintTop_toBottomOf="@id/tv5Coin" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/vgMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvPoint">

            <GridLayout
                android:id="@+id/glMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:columnCount="5"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvPoint">

                <LinearLayout
                    android:id="@+id/llMenu1"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibPeduliLindungi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_peduli_lindungi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="PeduliLindungi"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu2"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibPulsa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_phone_call" />

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Pulsa, Tagihan &amp; Hiburan"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu3"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibSupermarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_supermarket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Shopee Supermarket"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu4"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibMall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_bag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Shopee Mall"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu5"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_ticket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Gratis Ongkir &amp; Voucher"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu6"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibGames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_games" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Shopee Games"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu7"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibCOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_cod" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Bayar Di Tempat"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenu8"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_shopee_food" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Bayar Di Tempat"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMenu9"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_wallet9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_rupiah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Serba 1000"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu_list10"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_wallet10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_serba1000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Bayar Deal"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/llCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vgMenu">

            <ImageView
                android:id="@+id/ivBannerVoucher1"
                android:layout_width="230dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img_banner_voucher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gl_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_banner_voucher2"
                app:layout_constraintLeft_toRightOf="@id/ivBannerVoucher1"
                app:layout_constraintTop_toBottomOf="@+id/gl_menu" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivFlashSale"
            android:layout_width="60dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/llCard2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/img_flashsale"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_count_down"
            app:layout_constraintTop_toBottomOf="@id/llCard2"
            app:layout_constraintLeft_toRightOf="@id/ivFlashSale"
            android:layout_marginLeft="20dp"/>

        <HorizontalScrollView
            android:id="@+id/vgCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCard2"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_flash_sale1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/img_flash_sale2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/img_flash_sale2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/img_flash_sale2" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/llBottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vgCard3">


            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageButton
                    android:id="@+id/ibRekomendasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

                <TextView
                    android:id="@+id/tvRekomendasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rekomendasi"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/ic_baseline_dynamic_feed_24" />

                <TextView
                    android:id="@+id/tvFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llShopeeLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibShopeeLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_baseline_videocam_24" />

                <TextView
                    android:id="@+id/tvShopeeLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopee Live"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibNotifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/ic_baseline_notifications_24" />

                <TextView
                    android:id="@+id/tvNotifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:gravity="center"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibSaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <TextView
                    android:id="@+id/tvSaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>